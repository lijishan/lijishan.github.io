      <category term="更新说明" scheme="http://guide.realfarm.cn/tags/%E6%9B%B4%E6%96%B0%E8%AF%B4%E6%98%8E/"/>
    
      <category term="农场管理系统" scheme="http://guide.realfarm.cn/tags/%E5%86%9C%E5%9C%BA%E7%AE%A1%E7%90%86%E7%B3%BB%E7%BB%9F/"/>
    
